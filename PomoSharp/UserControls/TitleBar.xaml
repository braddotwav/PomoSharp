<UserControl
    x:Class="PomoSharp.UserControls.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PomoSharp.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="https://github.com/dotnetprojects/SVGImage"
    d:DesignHeight="32"
    d:DesignWidth="640"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="32" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="Transparent">
                            <ContentPresenter />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource brush-primary-200}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" MouseDown="OnTitleBar_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <svg:SVGImage
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                Source="/PomoSharp;component/Resources/Vectors/pomosharp.svg" />
            <Separator Margin="2,0" />
            <TextBlock
                Margin="0,1,0,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource font-medium}"
                FontSize="12"
                Foreground="{StaticResource brush-primary-800}"
                Text="PomoSharp" />
        </StackPanel>

        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--  Window Minimise Button  -->
            <Button Click="OnMinimiseApplication_Clicked" Style="{StaticResource WindowButton}">
                <svg:SVGImage
                    Width="12"
                    Height="12"
                    Margin="0,6,0,0"
                    OverrideColor="{StaticResource clr-primary-800}"
                    Source="/PomoSharp;component/Resources/Vectors/minus.svg" />
            </Button>
            <!--  Window Maximise Button  -->
            <Button Click="OnMaximiseApplication_Clicked" Style="{StaticResource WindowButton}">
                <svg:SVGImage
                    Width="12"
                    Height="12"
                    OverrideColor="{StaticResource clr-primary-800}"
                    Source="/PomoSharp;component/Resources/Vectors/square.svg" />
            </Button>

            <!--  Window Close Button  -->
            <Button Click="OnExitApplication_Clicked" Style="{StaticResource WindowButton}">
                <svg:SVGImage
                    Width="12"
                    Height="12"
                    OverrideColor="{StaticResource clr-primary-800}"
                    Source="/PomoSharp;component/Resources/Vectors/close.svg" />
            </Button>
        </StackPanel>
    </Grid>


</UserControl>
