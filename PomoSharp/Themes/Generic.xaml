<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  Primary Colors  -->
    <Color x:Key="clr-primary-100">#f9f9f9</Color>
    <Color x:Key="clr-primary-200">#e0e0e0</Color>
    <Color x:Key="clr-primary-300">#c7c7c7</Color>
    <Color x:Key="clr-primary-400">#aeaeae</Color>
    <Color x:Key="clr-primary-500">#959595</Color>
    <Color x:Key="clr-primary-600">#7d7d7d</Color>
    <Color x:Key="clr-primary-700">#646464</Color>
    <Color x:Key="clr-primary-800">#4b4b4b</Color>
    <Color x:Key="clr-primary-900">#323232</Color>
    <Color x:Key="clr-primary-1000">#191919</Color>


    <!--  Primary Brush  -->
    <SolidColorBrush x:Key="brush-primary-100" Color="#f9f9f9" />
    <SolidColorBrush x:Key="brush-primary-200" Color="#e0e0e0" />
    <SolidColorBrush x:Key="brush-primary-300" Color="#c7c7c7" />
    <SolidColorBrush x:Key="brush-primary-400" Color="#aeaeae" />
    <SolidColorBrush x:Key="brush-primary-500" Color="#959595" />
    <SolidColorBrush x:Key="brush-primary-600" Color="#7d7d7d" />
    <SolidColorBrush x:Key="brush-primary-700" Color="#646464" />
    <SolidColorBrush x:Key="brush-primary-800" Color="#4b4b4b" />
    <SolidColorBrush x:Key="brush-primary-900" Color="#323232" />
    <SolidColorBrush x:Key="brush-primary-1000" Color="#191919" />

    <!--  Text Sizes  -->
    <sys:Double x:Key="text-sm">14</sys:Double>
    <sys:Double x:Key="text-base">16</sys:Double>
    <sys:Double x:Key="text-lg">18</sys:Double>
    <sys:Double x:Key="text-xl">20</sys:Double>
    <sys:Double x:Key="text-2xl">24</sys:Double>
    <sys:Double x:Key="text-3xl">30</sys:Double>
    <sys:Double x:Key="text-4xl">36</sys:Double>
    <sys:Double x:Key="text-5xl">48</sys:Double>

    <!--  Font Family  -->
    <FontFamily x:Key="font-regular">/Resources/Fonts/#Inter Regular</FontFamily>
    <FontFamily x:Key="font-medium">/Resources/Fonts/#Inter Medium</FontFamily>
    <FontFamily x:Key="font-semibold">/Resources/Fonts/#Inter SemiBold</FontFamily>
    <FontFamily x:Key="font-bold">/Resources/Fonts/#Inter Bold</FontFamily>

    <!--  Borders  -->
    <Style x:Key="PrimaryBorder" TargetType="Border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource brush-primary-200}" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!--  Text Styles  -->
    <Style x:Key="Header" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource text-2xl}" />
        <Setter Property="Foreground" Value="{StaticResource brush-primary-700}" />
        <Setter Property="FontFamily" Value="{StaticResource font-semibold}" />
    </Style>
</ResourceDictionary>